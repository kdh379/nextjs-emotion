{
  "extends": "next/core-web-vitals",
  "settings": {
    "next": {
      "rootDir": "./src"
    }
  },
  "rules": {
    // Code style
    "indent": ["error", 2],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "comma-dangle": ["error", {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "imports": "never",
      "exports": "never",
      "functions": "never"
    }],
    "comma-spacing": ["error", { "before": false, "after": true }]
  }
}
